@{
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}


<style>
    #add_company_form {
        margin-top: 30px;
        margin-left: 30px;
        margin-right: 30px;
    }

    #p1 {
        opacity: 1;
        color: red;
    }

    #div2 {
        background-color: lightgrey;
        color: white;
    }

</style>

<div id="div1" class="container">

    <form asp-controller="Customer" asp-action="AddCustomer" method="post"  id="add_customer_form">
        <h3>Add Customer</h3>

        <br />
        <div id="div2">
            <h3>Customer Information</h3>

        </div>

        <p id="p1">* All Fields are Required</p>
        <div class="row">
            @*<div class="form-group col-md-6">
                <label>Customer ID</label>
                <input type="text" class="form-control" id="customer_id" asp-for="customer_id" placeholder="Customer ID">
                <span style="color:red" id="ecustomer"></span>
            </div>*@
            <div class="form-group col-md-6">
                <label>Customer Name</label>
              @*  <i asp-validation-for="customer_name" class="fa fa-info-circle"></i>*@
                <input type="text" class="form-control" name="customer_name" id="customer_name" asp-for="customer_name" placeholder="Customer Name">
                <span asp-validation-for="customer_name" id="ecompany" class="text-danger"></span>
               <span id="icndisplay" style="display:none;">

                    <i class='fas fa-exclamation' style='font-size:28px;color:red'></i>
               </span>
            </div>
            <div class="form-group col-md-6">
                <label>Parent Name</label>
                <input type="text" class="form-control" name="parent_name" id="parent_name" asp-for="parent_name" placeholder="Parent Name">
                <span asp-validation-for="parent_name" class="text-danger"></span>
              @*  <span style="color:red" id="eparentname"></span>*@
            </div>
        </div><br />
        <div class="row">
           
            <div class="form-group col-md-6">
                <label>Address</label>
                <input type="text" class="form-control" name="address" id="address" asp-for="address" placeholder="Address">
                <span asp-validation-for="address" class="text-danger"></span>
               @* <span style="color:red" id="eaddress"></span>*@
            </div>
            <div class="form-group col-md-6">
                <label>Customer Email</label>
                <input type="text" class="form-control" name="customer_email" id="customer_email" asp-for="customer_email" placeholder="Customer Email" />
   @*             <span style="color:red" id="ecustomeremail"></span>*@
   <span asp-validation-for="customer_email" class="text-danger"></span>
            </div>

        </div>
        <br />
        <div class="row">
            <div class="form-group col-md-6">
                <label>City</label>
                <input type="text" class="form-control" name="city" id="city" asp-for="city" placeholder="City">
               @* <span style="color:red" id="ecity"></span>*@
               <span asp-validation-for="city" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label>Mobile Number</label>
                <input type="text" class="form-control" name="mobile_number" id="mobile_number" asp-for="mobile_number" placeholder="Mobile Number">
              @*  <span style="color:red" id="emobilenumber"></span>*@
              <span asp-validation-for="mobile_number" class="text-danger"></span>
            </div>

           @* <div class="form-group col-md-2">
