@{
	Layout = "_AdminDashboard";
}
<style>
    .carousel-item {
        transition: transform 2s ease-in-out;
    }

    .carousel-fade .active.carousel-item-start,
    .carousel-fade .active.carousel-item-end {
        transition: opacity 0s 2s;
    }
</style>
<div class="card-group mt-5">
<div class="card text-white bg-primary ms-4"  style="max-width: 15rem;">
    <div class="card-header">Total kothies</div>
    <div class="card-body">
            <h5 class="card-title">No. of kothies: @ViewData["kothi_count"]</h5>
            <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active" data-bs-interval="4000">
                        <img src="/Image/property.jpeg" class="d-block"  width="100%" height="70%" alt="...">
                    </div>
                    <div class="carousel-item" data-bs-interval="4000">
                        <img src="/Image/property2.jpg" class="d-block " width="100%"  alt="...">
                    </div>
                    <div class="carousel-item" data-bs-interval="4000">
                        <img src="/Image/property3.jpg" class="d-block" width="100%" height="100%" alt="...">
                    </div>
                </div>
            </div>
            @*<img src="/Image/property.jpeg"  alt="Forest" width="100%" height="80%" >*@
        @*<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>*@
    </div>
</div>
<div class="card text-white bg-success  ms-4" style="max-width: 15rem;">
    <div class="card-header">Available Kothies</div>
    <div class="card-body">
            <h5 class="card-title">Available Kothies: @ViewData["available_kothies_count"]</h5>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    </div>
</div>
<div class="card text-white bg-danger ms-4" style="max-width: 15rem;">
        <div class="card-header">Expired Tokens</div>
    <div class="card-body">
        <h5 class="card-title">Expired Tokens</h5>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    </div>
</div>
<div class="card text-dark bg-warning  ms-4" style="max-width: 15rem;">
        <div class="card-header">On Hold Kothies</div>
    <div class="card-body">
            <h5 class="card-title">On Hold Kothies : @ViewData["Hold_kothies"]</h5>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    </div>
</div>
</div>