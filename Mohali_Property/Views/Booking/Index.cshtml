@model Mohali_Property_Model.BookingModel

<head>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>

<style>
	.center {
		border: 5px solid;
		margin-top:10%;
		padding: 10px;
	}

	


</style>

<div class="container">
	<div class="align-items-center justify-content-center center text-center">


	<div class="card text-white bg-danger ms-9" style="max-width: 85rem;">
			<div class="card-header"><h4>Booking Details</h4></div>
		<div class="card-body">
				<p>
					Company Name :
					@Model.company_name
				</p>
				<p>
					Kothi Number : 
					@Model.kothi_Number
				</p>
		
				<p>
					Plot Area : 
					@Model.plot_area  @Model.dimension
				</p>

				<p>
					Bookingg Amount : 
					@Model.booking_amount
				</p>
				<p>
					Total Price :
					@Model.price
				</p>
	
				<form asp-action="Confirm_booking" asp-controller="Booking">
					<input type="hidden" asp-for="kothi_id" />
					<input type="hidden" asp-for="company_id"/>
					<input type="hidden" asp-for="customer_id" value='@ViewData["customer_id"]'/>
					<button type="submit" class="btn btn-primary m-3">Confirm Booking</button>
				</form>
			
		</div>
	</div>

	</div>

</div>
