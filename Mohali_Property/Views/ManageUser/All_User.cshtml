@{
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}
<style>
    #div1 {
        margin-top: 30px;
        margin-left: 30px;
        margin-right: 30px;
    }

    #btneditproduct:hover {
        cursor: pointer;
    }

</style>


<div id="div1">
    <h3>List of All users</h3>

    <br />
    <a asp-controller="ManageUser" asp-action="Add_User"><button type="button" class="btn btn-warning">Add Kothi</button></a>
    @*<button type="button" class="btn btn-warning"><a asp-controller="ManageUser" asp-action="Add_User">Add User</a></button>*@
    <br />
    <br />

    <table id="usertable" name="usertable" class="display responsive">
        <thead>
            <tr>

                <th>Id</th>
                <th>Name</th>
                
                <th>Email</th>
                <th>Address</th>
                <th>City</th>
