<script>



    function add_user() {

        //validate();
        var data = new FormData();
        var form_data = $('#add_user_form').serializeArray();
        $.each(form_data, function (key, input) {
            data.append(input.name, input.value)
        });

        
        $.ajax({
            url: '/ManageUser/Adduser',
            type: "post",
            dataType: 'json',
            processData: false,
            contentType: false,
            data: data,

            success: function (res) {

                if (res == 1) {

                    alert("User Added");

                }
                else {
                    alert("Please try again");

                }
             

            }

        });

    }











