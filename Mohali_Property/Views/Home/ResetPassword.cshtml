@{
    ViewData["Title"] = "Login";
}

<style>
    h5 {
        color: white;
        text-align: center;
    }

    img {
        margin-top: 15px;
    }

</style>



<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />


<section class="myform-area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="form-area login-form">
                    <div class="form-content">
                        <h5>Mohali Property</h5>
                        <img src="/Image/property.jpeg" style="height:250px; width:300px;" alt="Property Image" />
                    </div>
                    <div class="form-input">
                        <h2>Reset Password </h2>
                        <form asp-controller="Home" asp-action="ResetPassword" method="post">
                            <input type="hidden" name="username" value='@ViewData["user_email"]' />
                            <div class="form-group">
                                <input type="text" id="email" name="password" required>
                                <span style="color:red" id="eusername"></span>
                                <label>Enter new password</label>
                            </div>
                            <div class="myform-button">
                                <button class="myform-btn" type="submit">Change Password</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
</>

<script src="https://code.jquery.com/jquery-3.6.4.min.js" integrity="sha256-oP6HI9z1XaZNBrJURtCoUT5SUnxFr8s3BzRl+cbzUq8=" crossorigin="anonymous"></script>


